{% macro checkbox(label, id, value) %}
  <label for="{{ id }}">
    <input type="checkbox" id="{{ id }}" name="{{ id }}" {% if value %} checked{% endif %}>
    {{ label }}
  </label>
{% endmacro %}

{% macro range(label, id, value, min=0, max=100, step=1) %}
  {% field label, { id: id } %}
    <input type="range" id="{{ id }}" name="{{ id }}" min="{{ min }}" max="{{ max }}" step="{{ step }}" value="{{ value }}">
    <output for="{{ id }}">{{ value }}</output>
  {% endfield %}
{% endmacro %}

{% macro select(label, id, value, options) %}
  {% field label, { id: id } %}
    <select id="{{ id }}" name="{{ id }}" value="{{ value }}">
      {% for option in options %}
        <option value="{{ option }}"{% if option == value %} selected{% endif %}>{{ option }}</option>
      {% endfor %}
    </select>
  {% endfield %}
{% endmacro %}
